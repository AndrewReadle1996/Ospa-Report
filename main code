    <script>
        lucide.createIcons();

        const ctx = document.getElementById('emailChart').getContext('2d');
        const emailChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Ospa Newsletter', 'SBP Newsletter', 'SBP Survey'],
                datasets: [{
                    label: 'Open Rate (%)',
                    data: [51, 49, 53],
                    backgroundColor: 'rgba(79, 70, 229, 0.6)', // Indigo
                    borderColor: 'rgba(79, 70, 229, 1)',
                    borderWidth: 1
                }, {
                    label: 'Click-Through Rate (%)',
                    data: [36, 32, 44],
                    backgroundColor: 'rgba(22, 163, 74, 0.6)', // Green
                    borderColor: 'rgba(22, 163, 74, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Percentage (%)'
                        }
                    }
                },
                plugins: {
                    title: {
                        display: true,
                        text: 'Email Campaign Engagement Comparison',
                        font: {
                            size: 16
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += context.parsed.y + '%';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
